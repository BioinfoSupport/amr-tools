{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "nf-amr pipeline - assemblies.csv sheet schema",
  "description": "Schema for assemblies.csv sheets",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["assembly_id","fasta"],
    "properties": {
      "assembly_id": {
        "type": "string",
        "pattern": "^\\S+$",
        "description": "Identifier for the assembly, must be provided and cannot contain spaces",
        "meta": "assembly_id"
      },
			"readset_id": {
        "type": "string",
        "description": "Parameters ",
        "meta": "readset_id"
      },
			"sample_id": {
        "type": "string",
        "description": "Parameters ",
        "meta": "sample_id"
      },
			"assembler_name": {
        "type": "string",
        "pattern": "^\\S+$",
        "description": "Name of the assembler that have produced the assembly",
        "meta": "assembler_name",
        "default": "unknown"
      },
			"assembler_args": {
        "type": "string",
        "description": "Parameters ",
        "meta": "assembler_args"
      },
      "fasta": {
        "type": "string",
        "format": "file-path",
        "exists": true,
        "pattern": "^\\S+\\.(fasta|fa)$",
        "description": "Path the FASTA file containing the assembly",
      },
      "info": {
        "type": "string",
        "format": "file-path",
        "exists": true,
        "pattern": "^\\S+\\.(txt|info|tsv)$",
        "description": "Path tabular file describing each contig of the assembly",
      }      
      
    }
  },
	"allOf": [
	  {"uniqueEntries": ["assembly_id"]}
	]
}
